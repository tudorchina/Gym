@page
@model Gym.Pages.GymClasses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Gym Classes</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GymClass[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymClass[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymClass[0].DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymClass[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymClass[0].Trainer)
            </th>
            <th>Premium Only</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GymClass) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainer.Name)
            </td>
                <td>
                    @if (item.IsPremium)
                    {
                        <span class="text-success">Yes</span>
                    }
                    else
                    {
                        <span class="text-danger">No</span>
                    }
                </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
